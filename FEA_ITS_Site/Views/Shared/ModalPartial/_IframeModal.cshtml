<script>
    var ReloadParent = false;

    jQuery(document).ready(function () {
        UIModals.init();
    });

    function ShowModelPopup()
    {
        $("#divShowPopup").click();
    }
    function SetModalStyle(width, height,url,title,reloadParent,margin_left,margin_top)
    {
        ReloadParent = false;//Added by Tony (2017-06-15)
        if(url != undefined && url != null)
        {
            setTimeout(function () {
                $("#ifmContent").attr("src", url);
                //your code to be executed after 1 seconds
                
            }, 500);
        }

        if (title != undefined && title != null) {
            $("#modal_title").html(title);
        }

        if (reloadParent != null && reloadParent != undefined && reloadParent == 'true')
            ReloadParent = true;
        
        //$("#responsive").css('width', '1050px !important');
        //$("#responsive").width(1050);
        if (height != null && height != undefined && height.length > 0)
            {
                //$("#responsive").attr('data-width', width);
               // $("#responsive").css('width', width);
               // $("#responsive").width(width);

            // alert(width);

            $("#responsive").attr('data-height', height);
            $("#responsive").css('height', height);
            $("#responsive").height(height + " !important");
        }

        if (width != null && width != undefined && width.length > 0) {
            //$("#responsive").attr('data-width', width);
            // $("#responsive").css('width', width);
            // $("#responsive").width(width);

            // alert(width);

            $("#responsive").attr('data-width', width);
            $("#responsive").css('width', width);
            $("#responsive").width(width);

        }

        if (margin_left != null && margin_left != undefined && margin_left.length > 0) {
            $("#responsive").css('margin-left', margin_left);
        }


    }

    function SetReloadParent()
    {
        $("#ifmContent").attr('src',''); // because when we close popup, the conten in iframe will bee reload
        if (ReloadParent)
        {
            reloadContent(); // function from FEA_Function.js
        }
    }
</script>
