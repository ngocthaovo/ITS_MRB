@{
    ViewBag.Title = "ApproveForm";
    Layout = "~/Views/Shared/_FEAContentLayout.cshtml";
}
@model FEA_BusinessLogic.sp_GetMaintenanceDetailsQuantity_Result

@Html.DevExpress().GetStyleSheets(
    new StyleSheet{ExtensionSuite = ExtensionSuite.Editors},
    new StyleSheet{ExtensionSuite = ExtensionSuite.GridView})

@Html.DevExpress().GetScripts(
    new Script{ExtensionSuite = ExtensionSuite.Editors},
    new Script{ExtensionSuite = ExtensionSuite.GridView})

<div class="panel-body">
    
    <div class="row">
        <div class="col-md-12">
            @{Html.RenderAction("ApproveDetailList", "Maintenance", new { ID = ViewBag.ID });}
        </div>
        
    </div>
    <hr />
    <div class="row buttonbar">
        <div class="col-md-12" align="right">
            @Html.DevExpress().Button(
                          settings =>
                          {
                              settings.Name = "btnSign";
                              settings.Text = @Resources.Resource.Sign;
                              settings.Width = 100;
                              settings.UseSubmitBehavior = false;
                              settings.ClientSideEvents.Click = "CallToAction";
                          }
        ).GetHtml()
            @Html.DevExpress().Button(
                          settings =>
                          {
                              settings.Name = "btnReject";
                              settings.Text = @Resources.Resource.Reject;
                              settings.Width = 100;
                              settings.UseSubmitBehavior = false;
                              settings.ClientSideEvents.Click = string.Format("function(s, e) {{ DoReject('{0}'); }}", ViewBag.ID == null ? "" : ViewBag.ID);
                          }
        ).GetHtml()
        </div>
    </div>
</div>
